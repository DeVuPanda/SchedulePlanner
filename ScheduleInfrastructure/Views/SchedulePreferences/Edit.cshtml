@model ScheduleDomain.Model.SchedulePreference
@{
    ViewData["Title"] = "Edit";
}
<h1>Edit</h1>
<h4>Schedule preference</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="TeacherId" />
            <div class="form-group">
                <label asp-for="SubjectId" class="control-label"></label>
                <select asp-for="SubjectId" class="form-control" asp-items="ViewBag.SubjectId"></select>
                <span asp-validation-for="SubjectId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DayOfWeekId" class="control-label"></label>
                <select asp-for="DayOfWeekId" class="form-control" asp-items="ViewBag.DayOfWeekId"></select>
                <span asp-validation-for="DayOfWeekId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PairNumberId" class="control-label"></label>
                <select asp-for="PairNumberId" class="form-control" asp-items="ViewBag.PairNumberId"></select>
                <span asp-validation-for="PairNumberId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaxPairsPerDayId" class="control-label"></label>
                <select asp-for="MaxPairsPerDayId" class="form-control" asp-items="ViewBag.MaxPairsPerDayId"></select>
                <span asp-validation-for="MaxPairsPerDayId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Priority" class="control-label"></label>
                <input asp-for="Priority" class="form-control" />
                <span asp-validation-for="Priority" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" style="margin-top: 5px" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index" class="btn btn-secondary" style="margin-top: 5px">Back to List</a>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}