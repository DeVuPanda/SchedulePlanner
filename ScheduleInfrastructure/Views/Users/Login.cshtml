@{
    ViewData["Title"] = "Login";
}
<h2>Login</h2>
<form asp-action="Login" asp-controller="Users" method="post">
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label for="email">Email</label>
        <input type="email" class="form-control" id="email" name="email" required placeholder="Example: alexpetrenko@gmail.com" />
    </div>
    <div class="form-group">
        <label for="password">Password</label>
        <input type="password" class="form-control" id="password" name="password" required placeholder="A44867291a$" />
    </div>
    <div class="text-danger">
        @Html.ValidationSummary()
    </div>
    <button type="submit" class="btn btn-primary">Login</button>
</form>



